<%= stylesheet_link_tag 'client', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="nothing_selected" id="nothing_selected">
  Выберите или создайте тикет, чтобы начать работать
</div>
<div id="client" class="hidden">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token, id: 'token' %>
  <div id="active_ticket">
    <div id="ticket_info"></div>
    <div id="product_info"></div>
  </div>
  <div id="client_info"></div>
  <div id="another_tickets"></div>
</div>
<div id="client2" class="hidden">
  <div id="client_info2"></div>
  <div id="another_tickets2"></div>
</div>
<div class="dm-overlay" id="win5000000">
  <div class="dm-table">
    <div class="dm-cell">
      <div class="dm-modal2" id="block_attach">
        <a href="#close" class="close"></a>
        <div class="info" id="block_files">
          <div id="content">
            <div id="files"></div>
          <br>
          <form method="post" action="/add_files_to_client" enctype="multipart/form-data">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <div class="example-1">
              <div class="form-group">
                <label class="label">
                  <span class="title" id="file">Выберите файл</span>
                  <input type="file"name="files" id="avatar" onchange="alert_about_choise(this)">
                </label>
              </div>
            </div>
            <input type="submit" value="Загрузить" id="but_avatar">
            <input type="hidden" name="id" id="input_for_id">
          </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="dm-overlay" id="win5000001">
  <div class="dm-table">
    <div class="dm-cell">
      <div class="dm-modal2" id="block_attach">
        <a href="#close" class="close"></a>
        <div class="info" id="block_files">
          <span id="message">Файл успешно загружен</span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="dm-overlay" id="win91">
  <div class="dm-table">
    <div class="dm-cell">
      <div class="dm-modal2" id="update_block">
        <a href="#close" class="close"></a>
        <div class="info">
          <form name="updateForm" onsubmit="update_params(); return false">
            <div id="manager_client" class="hidden">
              <select placeholder="Менеджер" class="textInput" name="manager1">
                <option selected disabled value="">Менеджер..</option>
                <% User.company(@company.id).each do |user| %>
                  <option value="<%= user.id %>"><%= user.full_name %></option>
                <% end %>
              </select>
            </div>
            <div id="manager_ticket" class="hidden">
              <select placeholder="Менеджер" class="textInput" name="manager2">
                <option selected disabled value="">Менеджер..</option>
                <% User.company(@company.id).each do |user| %>
                  <option value="<%= user.id %>"><%= user.full_name %></option>
                <% end %>
              </select>
            </div>
            <div id="status_update" class="hidden">
              <select  style="margin-right: 47px" placeholder="Статус" class="textInput" name="status">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <option selected disabled value="">Статус..</option>
                <% Status.company(@company.id).each do |status| %>
                  <option value="<%= status.id %>"><%= status.title %></option>
                <% end %>
              </select>
            </div>
            <div id="category_update" class="hidden">
              <select placeholder="Категория" class="textInput" name="category">
                <option selected disabled value="">Категория..</option>
                <% Category.company(@company.id).each do |category| %>
                  <option value="<%= category.id %>"><%= category.title %></option>
                <% end %>
              </select>
            </div>
            <div id="date" class="hidden">
              <input type="date" name="date">
            </div>
            <input type="hidden" name="type" id="type_for_update">
            <br>
            <div class="submit submit-with-social">
              <button name="submit_login" type="submit" id="menu3" class="log">
                <span class="menu_text" id="menu_text3">Изменить<b></b><b></b></span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="../assets/client.js"></script>
