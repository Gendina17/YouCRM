<input type="checkbox" id="asruk-tkilasun" aria-hidden="true">
<nav class="mudsarulopas">
  <label for="asruk-tkilasun" class="asruk-tkilasun" onclick>
    <% if @is_new %>
      <span onclick="change_icon()" id="for_icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-exclamation-square"
             viewBox="0 0 16 16"><path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2
              0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/><path d="M7.002 11a1 1 0 1 1 2
              0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
        </svg>
      </span>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-check-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
      </svg>
    <% end %>
  </label>
  <section id="for_scrol">
    <% @tasks.each do |task| %>
      <div class="one_task" id="task_<%= task.id %>">
        <div class="one-task">
          <span class="subject-task"><%= task.subject %></span>
          <br>
          <div class="body-task" data-toggle="modal" data-target="#exampleModal" onclick="add_text('<%= task.subject %>',
            '<%= task.body %>', '<%= User.find(task.creator_id).full_name %>', '<%= task.until_date %>',
            '<%= task.tag %>', '<%= task.is_new %>')"><%= task.body %></div>
          <div class="tag-task"><%= task.tag.blank? ? '---' : task.tag %></div>
          <button class="button-task" onclick="inactive('<%= task.id %>')">inactive</button>
        </div>
      </div>
    <% end %>
  </section>
</nav>
<div class="modal fade sizet cent" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
  <div class="modal-dialog sizet" role="document">
    <div class="modal-content sizet color">
      <div class="modal-header color2">
        <h4 class="modal-title" id="exampleModalLabel">Задача от </h4>
      </div>
      <div id="tuda" class="modal-body">
        <span id="task-subject"></span>
        <p id="task-body"></p>
        <p id="task-tag"></p>
        <span id="task-time"></span>
        <span id="task-new"></span>
      </div>
    </div>
  </div>
</div>
